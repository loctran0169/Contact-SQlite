<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/item_contact"
        android:layout_height="56dp"
        android:background="@drawable/customview">
    <TextView
            android:id="@+id/tvName"
            android:hint="@string/lbName"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/btEdit"
            app:layout_constraintBottom_toTopOf="@id/tvPhone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tvPhone"
            android:hint="@string/lbPhone"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/btEdit"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:id="@+id/btEdit"
            android:background="@drawable/ic_edit"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/btDelete"
            app:layout_constraintBottom_toBottomOf="@id/btDelete"
            app:layout_constraintRight_toLeftOf="@id/btDelete"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    <ImageButton
            android:id="@+id/btDelete"
            android:background="@drawable/ic_remove"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/btFavorite"
            app:layout_constraintBottom_toBottomOf="@id/btFavorite"
            app:layout_constraintRight_toLeftOf="@id/btFavorite"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    <ImageButton
            android:id="@+id/btFavorite"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/selector_favorite"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>